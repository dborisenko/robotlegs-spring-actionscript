<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<s:layout>
		<s:HorizontalLayout paddingTop="3" paddingBottom="3" verticalAlign="middle" paddingLeft="5" />
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import com.dborisenko.robotlegs.spring.cafe.data.Food;
		]]>
	</fx:Script>
	
	<s:Image width="20" height="20" source="{Food(data).iconSource}" />
	<s:Label text="{Food(data).name}"/>
	<s:Label text="({Food(data).cost}$)"/>
	
</s:ItemRenderer>
